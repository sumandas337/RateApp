<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_xsmall"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin_medium">

        <geofence.sample.com.viewutils.FontTextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/black_54"
            android:textSize="14sp"
            app:custom_font="Averta-Extrabold.ttf"
             />

        <geofence.sample.com.viewutils.FontTextView
            android:id="@+id/city_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/city_name"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_xsmall"
            app:custom_font="Roboto-Regular.ttf"
            />

        <RatingBar
            android:id="@+id/city_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/city_description"
            android:numStars="5"
            android:backgroundTint="@color/black_100"
            android:isIndicator="false"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>